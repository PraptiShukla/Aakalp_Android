<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".Sets">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

        <TextView
            android:id="@+id/sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Available Sets"
            android:textColor="@color/grad2"
            android:textSize="100px"
            android:textStyle="bold"
            android:shadowColor="@color/grad1"
            android:shadowRadius="30"/>

        <TextView
            android:id="@+id/sdes"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="20dp"
            android:text="Collection Of Our Available Sets"
            android:textColor="@color/purple_700"
            android:textSize="45px"
            android:layout_below="@+id/sets"/>

            <TextView
                android:id="@+id/sdes1"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-medium"
                android:text=" Range from Rs.12000 to Rs.35000"
                android:textColor="@color/purple_700"
                android:textSize="25px"
                android:layout_below="@+id/sdes"/>

            <GridLayout
                android:id="@+id/sitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="8"
                android:layout_below="@+id/sdes"
                android:layout_margin="10dp">

            <ImageView
                android:id="@+id/brset"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/bridal"
                android:layout_row="0"
                android:layout_column="0"/>

                <TextView
                    android:id="@+id/i1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="130dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="Bridal Set"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/i01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="35dp"
                    android:text="from Rs. 35000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/b1"
                    android:layout_height="35dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="45dp"
                    android:text="purchase"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"/>

                <Button
                    android:id="@+id/b01"
                    android:layout_height="35dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="38dp"
                    android:text="Add to Cart"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"
                    android:layout_marginBottom="20dp"/>

                <ImageView
                android:id="@+id/baset"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/baby"
                android:layout_marginStart="10dp"
                android:layout_row="0"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/i2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="10dp"
                android:text="Baby Gift Set"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/i02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="150dp"
                    android:layout_marginStart="30dp"
                    android:text="from Rs. 12000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/b2"
                    android:layout_height="35dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="180dp"
                    android:layout_marginStart="40dp"
                    android:text="purchase"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"/>

                <Button
                    android:id="@+id/b02"
                    android:layout_height="35dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginTop="220dp"
                    android:layout_marginStart="35dp"
                    android:text="Add to Cart"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"
                    android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/pset"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/puja"
                android:layout_row="1"
                android:layout_column="0"/>

            <TextView
                android:id="@+id/i3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginStart="25dp"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="10dp"
                android:text="Puja Thali Set"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/i03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="160dp"
                    android:layout_marginStart="35dp"
                    android:text="from Rs. 22000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/b3"
                    android:layout_height="35dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="190dp"
                    android:layout_marginStart="45dp"
                    android:text="purchase"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"/>

                <Button
                    android:id="@+id/b03"
                    android:layout_height="35dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="230dp"
                    android:layout_marginStart="38dp"
                    android:text="Add to Cart"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"
                    android:layout_marginBottom="20dp"/>

            <ImageView
                android:id="@+id/gset"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/gift"
                android:layout_row="1"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/i4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginStart="40dp"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="10dp"
                android:text="Gift Set"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/i04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="160dp"
                    android:layout_marginStart="25dp"
                    android:text="from Rs. 16000"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/b4"
                    android:layout_height="35dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="190dp"
                    android:layout_marginStart="40dp"
                    android:text="purchase"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"/>

                <Button
                    android:id="@+id/b04"
                    android:layout_height="35dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="230dp"
                    android:layout_marginStart="33dp"
                    android:text="Add to Cart"
                    android:background="@drawable/mybutton"
                    android:textSize="10dp"
                    android:layout_marginBottom="20dp"/>

            </GridLayout>
            <TextView
                android:layout_width="450dp"
                android:layout_height="30dp"
                android:background="@color/navbar"
                android:text="Â© 2023 Copyright: Aakalp.com"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="10dp" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>