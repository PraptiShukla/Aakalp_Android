<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".purchase">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="60dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Order"
            android:textColor="@color/grad2"
            android:textSize="150px"
            android:textStyle="bold"
            android:shadowColor="@color/grad2"
            android:shadowRadius="30"/>

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

          <TextView
              android:id="@+id/orderid1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Order Id: "
              android:textSize="20dp"
              android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/orderid"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="50dp"
                android:background="#5C8F5DE8"
                android:shadowColor="@color/white"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/custid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Id: "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/custid"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="12dp"
                android:background="#5C8F5DE8"
                android:shadowColor="@color/white"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ordertype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Type: "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/ordertype"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="23dp"
                android:background="#5C8F5DE8"
                android:shadowColor="@color/white"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/quantity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quanity: "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/quantity"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="52dp"
                android:background="#5C8F5DE8"
                android:shadowColor="@color/white"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/amount"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="0dp"
                android:background="#5C8F5DE8"
                android:shadowColor="@color/white"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/l6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/given1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Given By: "
                android:textSize="18dp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/given"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:background="#5C8F5DE8"
                android:shadowColor="@color/white"
                android:textColor="@color/black"
                android:textColorHighlight="@color/white"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/bpurchase"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="130dp"
            android:text="Purchase"
            android:padding="15dp"
            android:background="@drawable/mybutton"
            android:layout_marginBottom="62dp"/>

        <TextView
            android:layout_width="450dp"
            android:layout_height="30dp"
            android:background="@color/navbar"
            android:text="Â© 2023 Copyright: Aakalp.com"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>